{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "rootDirs": ["./src", "./tests"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node", "jest"],
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "jest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "esm": true
  }
}