{
  "name": "selenium-playwright-converter",
  "version": "1.0.0",
  "description": "Convert Selenium WebDriver TypeScript tests to Playwright",
  "type": "module",
  "main": "dist/converter.js",
  "bin": {
    "sel2pw": "dist/cli.js",
    "selenium-to-playwright": "dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],

  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist coverage",
    "dev": "NODE_OPTIONS='--loader ts-node/esm' node --loader ts-node/esm src/cli.ts",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "lint:staged": "lint-staged",
    "prepare": "husky install",
    "prepack": "npm run build",
    "prettier": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "start": "node --experimental-specifier-resolution=node dist/cli.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --passWithNoTests",
    "test:ci": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --ci --coverage",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --coverage",
    "test:update": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --updateSnapshot",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --watch",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "selenium",
    "playwright", 
    "migration",
    "test-automation",
    "converter",
    "cli"
  ],
  "author": "Neil Fitzgerald <neilfitzgerald1972@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.0.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neilfitzgerald1972/selenium-playwright-converter-ts.git"
  },
  "bugs": {
    "url": "https://github.com/neilfitzgerald1972/selenium-playwright-converter-ts/issues"
  },
  "homepage": "https://github.com/neilfitzgerald1972/selenium-playwright-converter-ts#readme",
  "packageManager": "npm@10.2.0"
}