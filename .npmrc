# Save exact version of packages in package-lock.json
save-exact = true

# Use package-lock.json
package-lock = true

# Use npm ci for clean installs in CI
auto-install-peers = true

# Disable package-lock for workspaces
# package-lock = false
# workspaces-update = false

# Set the default branch for GitHub packages
# @scope:registry=https://npm.pkg.github.com
# //npm.pkg.github.com/:_authToken=${NPM_TOKEN}

# Set the default registry
# registry=https://registry.npmjs.org/

# Always try to get the latest version from the registry
# prefer-offline = true

# Set the cache directory
# cache = ${HOME}/.npm-cache

# Set the tmp directory
# tmp = ${HOME}/.npm-tmp

# Set the loglevel
# loglevel = warn

# Set the progress bar
# progress = false

# Set the fetch retry settings
# fetch-retries = 2
# fetch-retry-mintimeout = 10000
# fetch-retry-maxtimeout = 60000

# Set the cache min and max age
# cache-min = 10
# cache-max = 0

# Set the user agent
# user-agent = npm/{npm-version} node/{node-version} {platform} {arch} {ci}
